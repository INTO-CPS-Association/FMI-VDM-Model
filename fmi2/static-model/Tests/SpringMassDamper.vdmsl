		loc,
		"2.0", "MassSpringDamper", "GUID", nil, nil, nil, nil, nil, nil, nil, <structured>, nil,

		-- Model types
		mk_ModelExchange(loc, "MSD", nil, nil, nil, nil, nil, nil, nil, nil),
		nil,

