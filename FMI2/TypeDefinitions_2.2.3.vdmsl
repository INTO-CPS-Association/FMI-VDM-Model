/**
 * 2.2.3 Definition of Types (TypeDefinitions)
 */
types
	RealType ::
		min			: [real]
		max			: [real]
		nominal		: [real]
		unbounded	: [bool]
	inv r ==
		-- @OnFail("RealType invalid, XSD p39")
		-- @OnFail("RealType max %s not >= min %s", r.max, r.min)
		( r.max <> nil and r.min <> nil => r.max >= r.min );

	IntegerType ::
		min			: [int]
		max			: [int]
	inv i ==
		-- @OnFail("RealType invalid, XSD p39")
		-- @OnFail("IntegerType max %s not >= min %s", r.max, r.min)
		( i.max <> nil and i.min <> nil => i.max >= i.min );

	BooleanType ::
		;

	StringType ::
		;

	-- Items of an enumeration as a sequence of "name" and "value" pairs. The
	-- values can be any integer number, but must be unique within the same
	-- enumeration (in order that the mapping between "name" and "value" is
	-- bijective). An Enumeration element must have at least one Item.

	Item ::
		name		: seq1 of char
		value		: int;

	EnumerationType ::
		items		: seq1 of Item
	inv e ==
		-- @OnFail("RealType invalid, XSD p39")
		-- @OnFail("EnumerationType item name/values do not form a bijection")
		(
			card { i.name | i in seq e.items } = len e.items
			and	card { i.value | i in seq e.items } = len e.items
		);

	SimpleType ::		-- XSD p38
		name		: seq1 of char
		type		: RealType | IntegerType | BooleanType | StringType | EnumerationType;
