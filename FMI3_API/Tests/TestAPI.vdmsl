functions
    /**
     * Test the basic operation of the fmi3 instantiate functions.
     */
     testInstantiateModelExchange: () -> [fmi3Instance]
     testInstantiateModelExchange() ==
        fmi3InstantiateModelExchange(
            "ME instance",
            "{111-222-333-444}",
            "",
            false,
            true,
            mk_fmi3InstanceEnvironment(modelExchangeFMU, mk_SolverData([]), nil),
            fmi3Logger);

     testInstantiateBasicCoSimulation: () -> [fmi3Instance]
     testInstantiateBasicCoSimulation() ==
        fmi3InstantiateBasicCoSimulation(
            "Basic instance",
            "{111-222-333-444}",
            "",
            false,
            true,
            false,
            false,
            false,
            mk_fmi3InstanceEnvironment(basicCosimulationFMU, mk_SolverData([]), nil),
            fmi3Logger,
            nil);

     testInstantiateHybridCoSimulation: () -> [fmi3Instance]
     testInstantiateHybridCoSimulation() ==
        fmi3InstantiateHybridCoSimulation(
            "Hybrid instance",
            "{111-222-333-444}",
            "",
            false,
            true,
            false,
            false,
            false,
            mk_fmi3InstanceEnvironment(hybridCosimulationFMU, mk_SolverData([]), nil),
            fmi3Logger,
            nil);

     testInstantiateScheduledCoSimulation: () -> [fmi3Instance]
     testInstantiateScheduledCoSimulation() ==
        fmi3InstantiateScheduledCoSimulation(
            "Scheduled instance",
            "{111-222-333-444}",
            "",
            false,
            true,
            false,
            false,
            false,
            mk_fmi3InstanceEnvironment(scheduledCosimulationFMU, mk_SolverData([]), nil),
            fmi3Logger,
            nil,
            preemptionVoid,
            preemptionVoid);

	preemptionVoid: () -> <VOID>
	preemptionVoid() == <VOID>;

	testSetDebugLogging: () -> bool
	testSetDebugLogging() ==
		let mk_(s, -) = fmi3SetDebugLogging(testInstantiateModelExchange(), true, 2, ["Full", "Terse"]) in
			s = <fmi3OK>;

	testFreeInstance: () -> bool
	testFreeInstance() ==
		fmi3FreeInstance(testInstantiateModelExchange()) = <VOID> and
		fmi3FreeInstance(nil) = <VOID>;

	testGetVersion: () -> bool
	testGetVersion() ==
		fmi3GetVersion() = "3.0";

    /**
     * Run all tests.
     */
    tests: () -> seq of bool
    tests() ==
    [
        testInstantiateModelExchange() <> nil,
        testInstantiateBasicCoSimulation() <> nil,
        testInstantiateHybridCoSimulation() <> nil,
        testInstantiateScheduledCoSimulation() <> nil,
        testSetDebugLogging(),
        testFreeInstance(),
        testGetVersion()
    ]
    post elems RESULT = {true};
