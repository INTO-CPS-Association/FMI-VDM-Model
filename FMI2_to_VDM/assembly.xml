<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>distribution</id>

	<formats>
		<format>zip</format>
	</formats>
	
	<baseDirectory>vdmcheck-${project.version}</baseDirectory>

	<files>
		<file>
			<source>target/classes/fmi2vdm/FMI2ToVDM.class</source>
			<destName>classes/fmi2vdm/FMI2ToVDM.class</destName>
		</file>
		<file>
			<source>src/main/bash/VDMCheck.sh</source>
			<destName>VDMCheck.sh</destName>
		</file>
	</files>

	<dependencySets>
		<dependencySet>
			<includes>
				<include>fmi2:vdm-model</include>
			</includes>
			<unpack>true</unpack>
			<outputDirectory>model</outputDirectory>
			<unpackOptions>
				<excludes>
					<exclude>Tests/**</exclude>
					<exclude>META-INF/**</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.fujitsu:vdmj</include>
				<include>com.fujitsu:annotations</include>
				<include>com.fujitsu:annotations2</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>