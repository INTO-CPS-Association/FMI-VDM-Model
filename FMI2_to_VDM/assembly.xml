<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>distribution</id>

	<formats>
		<format>jar</format>
	</formats>
	
	<!-- <baseDirectory>vdmcheck-${project.version}</baseDirectory> -->
	<includeBaseDirectory>false</includeBaseDirectory>

	<files>
		<!-- <file>
			<source>src/main/scripts/VDMCheck2.sh</source>
			<destName>VDMCheck2.sh</destName>
			<filtered>true</filtered>
		</file> -->
		<file>
			<source>../LICENCE</source>
			<destName>LICENCE</destName>
		</file>
	</files>

	<dependencySets>
		<dependencySet>
			<includes>
				<include>fmi2:vdm-model</include>
			</includes>
			<unpack>true</unpack>
			<outputDirectory>model</outputDirectory>
			<unpackOptions>
				<excludes>
					<exclude>Tests/**</exclude>
					<exclude>META-INF/**</exclude>
				</excludes>
			</unpackOptions>
			<scope>runtime</scope>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.fujitsu:vdmj</include>
				<include>com.fujitsu:annotations</include>
				<include>com.fujitsu:annotations2</include>
			</includes>
			<unpack>true</unpack>
			<outputDirectory>/</outputDirectory>
			<unpackOptions>
				<excludes>
					<exclude>Tests/**</exclude>
					<exclude>META-INF/**</exclude>
				</excludes>
			</unpackOptions>
			<scope>runtime</scope>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>fmi2:fmi2vdm</include>
			</includes>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>Tests/**</exclude>
					<exclude>META-INF/**</exclude>
				</excludes>
			</unpackOptions>
			<useProjectArtifact>true</useProjectArtifact>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>